{
    "name": "legatus/http-errors",
    "description": "HTTP exceptions for PSR-7 applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matias Navarro Carter",
            "email": "contact@mnavarro.dev"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Legatus\\Http\\Errors\\": "src"
        },
        "files": ["functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Legatus\\Http\\Errors\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.7",
        "psr/http-server-middleware": "^1.0"
    },
    "scripts": {
        "lint": "php-cs-fixer fix --ansi",
        "ci:style": "php-cs-fixer fix --dry-run -vvv --ansi",
        "ci:test": "phpunit --testdox --coverage-text",
        "ci:types": "psalm",
        "ci": [
            "@ci:types",
            "@ci:test",
            "@ci:style"
        ]
    }
}
